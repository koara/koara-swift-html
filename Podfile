workspace 'KoaraHtml'

target 'KoaraHtml iOS' do
  use_frameworks!
  platform :ios, '8.0'
  pod 'Koara'

  target 'KoaraHtml iOS Tests' do
    pod 'Quick'
    pod 'Nimble'
  end
end

